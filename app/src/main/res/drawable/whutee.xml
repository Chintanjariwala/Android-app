<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#D3D3D3" />

            <corners
                android:radius="7dp" />

        </shape>
    </item>
    <item>
        <shape>

            <stroke
                android:color="@android:color/transparent" />
            <corners
                android:radius="7dp" />

        </shape>
    </item>
</selector>